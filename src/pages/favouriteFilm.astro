---
import MainLayout from "../layouts/MainLayout.astro";
const name = 'alien'
const response = await fetch(`https://www.omdbapi.com/?t=${name}&apikey=ff01f1bd`)
const film = await response.json()
---

<MainLayout title="My favourite film">
    <h3>{film.Title}</h3>
    <p>{film.Plot}</p>
    <p><small>{film.Director}</small></p>
    <img src={film.Poster} alt="poster" width="300"/>
</MainLayout>

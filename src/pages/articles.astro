---
import MainLayout from "../layouts/MainLayout.astro"
const articles = await Astro.glob("../pages/articles/*.md")
const nonDraftArticles = articles
            .filter((article) => !article.frontmatter.draft);

---


<MainLayout title="Articles List">
<ul>
    {nonDraftArticles.map( article => 
        <li>{article.frontmatter.title} 
            <a href={article.url}>Leer m√°s</a>
        </li>
    )}
</ul>
</MainLayout>